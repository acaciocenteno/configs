# Directory navigation
alias .="cd .."

alias ..="cd ../.."
alias ...="cd ../../.."
alias ....="cd ../../../.."
alias .....="cd ../../../../.."

alias p="pushd"
alias b="popd" # b=back

# Other commands
alias gr="egrep -Inri --color"
alias a="ack"
alias en="emacs -nw --no-splash"
alias v="vim"
alias i="ipython --no-confirm-exit --quiet --pprint --no-banner"
alias ff="open -b org.mozilla.firefox"
alias pl="pylint -f colorized -r n --msg-template='{C}:{msg_id}:{line:3d},{column:2d}:{msg}'"
alias s="sudo -i"
alias h="history"
alias tdmp="sudo tcpdump -xX -s0 -iany -nn"
alias t="task"
alias ta="task add"
alias tl="task list"

task_set_done() {
	task $1 done
}
alias td="task_set_done"

# git aliases
alias g="git"
alias gs="git status -sb"
alias ga="git add"
alias gc="git commit"
alias gps="git push"
alias gpl="git pull"
alias gl="git log --all --graph --decorate --oneline --abbrev-commit"
alias org="emacs ~/.cur.org"
alias h="sudo halt"

alias tor="chrome --incognito --proxy-server=socks5://127.0.0.1:9050"
# Usefull scripts
alias lip="ifconfig | grep -e '\(^[[:alpha:]]\|inet[[:blank:]]\)' | awk '{ if ( index(\$0, \":\") != 0 ) print \$1; else print \"\t\"\$2; }'"
alias urlencode='python -c "import sys, urllib as ul; print ul.quote_plus(sys.argv[1]);"'

# O.S. specific aliases
os=`uname -s`

if [ "${os}" == "Darwin" -a -f ".aliases.osx" ]; then
	source ~/.aliases.osx
elif [ "${os}" == "Linux" -a -f ".aliases.linux" ]; then
	source ~/.aliases.linux
elif [ "${os}" == "FreeBSD" -a -f ".aliases.bsd" ]; then
	source ~/.aliases.bsd
fi

# Percol based kill
alias pk="ps aux | percol | awk '{ print \$2 }' | xargs kill"
alias spk="sudo ps aux | percol | awk '{ print \$2 }' | xargs kill"
