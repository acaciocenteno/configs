# Directory navigation
#alias .="cd .."

#alias ..="cd ../.."
#alias ...="cd ../../.."
#alias ....="cd ../../../.."
#alias .....="cd ../../../../.."

alias p="pushd"
alias b="popd" # b=back

# Other commands
alias gr="egrep -Inri --color"
alias a="ack"
alias en="emacs -nw --no-splash"
alias v="vim"
alias i="ipython --no-confirm-exit --quiet --pprint --no-banner"
alias ff="open -b org.mozilla.firefox"
alias pl="pylint -f colorized -r n --msg-template='{C}:{msg_id}:{line:3d},{column:2d}:{msg}'"
alias s="sudo -i"
alias h="history"
alias tdmp="sudo tcpdump -xX -s0 -iany -nn"

source ~/.aliases_task
source ~/.aliases_git

alias tor="chrome --incognito --proxy-server=socks5://127.0.0.1:9050"
# Usefull scripts
alias lip="ifconfig | grep -e '\(^[[:alpha:]]\|inet[[:blank:]]\)' | awk '{ if ( index(\$0, \":\") != 0 ) print \$1; else print \"\t\"\$2; }'"
alias urlencode='python -c "import sys, urllib as ul; print ul.quote_plus(sys.argv[1]);"'

# Percol based kill
alias pk="ps aux | percol | awk '{ print \$2 }' | xargs kill"
alias spk="sudo ps aux | percol | awk '{ print \$2 }' | xargs kill"

# Docker
alias d="docker"
alias dc="docker-compose"
alias dps="docker ps"
alias dpsa="docker ps --all"
alias de="docker exec -ti"

alias win="xfreerdp /u:'Administrator' /p:'zFjlG7Fd%fmG(gf4' /v:'10.248.114.86:3389' >/dev/null 2>&1 &"
alias hub="HTTP_PROXY= http_proxy= hub"
